        <m:mrow>
         <m:mtext>Profit</m:mtext><m:mo>=</m:mo><m:mtext>Total revenue</m:mtext><m:mo>−</m:mo><m:mtext>Total cost</m:mtext>
        </m:mrow>
       </m:mtd>
      </m:mtr>
      <m:mtr columnalign="left">
